PORT=3000
NODE_ENV=development

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=usdt_wallet
DB_USER=postgres
DB_PASSWORD=your_password

# Solana RPC (메인넷 또는 데브넷)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
# 또는 무료 RPC: https://solana-api.projectserum.com
# Helius (추천): https://mainnet.helius-rpc.com/?api-key=YOUR_API_KEY

# Master Seed (실제 운영시 AWS KMS 사용)
MASTER_SEED_ENCRYPTED=your_encrypted_master_seed

# JWT
JWT_SECRET=your_jwt_secret_key_change_this

# Hot Wallet (출금용) - Solana Private Key (Base58)
HOT_WALLET_PRIVATE_KEY=your_hot_wallet_private_key_base58